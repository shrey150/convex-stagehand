{
  "name": "@convex-dev/stagehand",
  "version": "0.0.1",
  "description": "Convex component for AI-powered browser automation with Stagehand",
  "type": "module",
  "main": "./dist/client/index.js",
  "types": "./dist/client/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/client/index.d.ts",
      "default": "./dist/client/index.js"
    },
    "./convex.config": {
      "types": "./dist/component/convex.config.d.ts",
      "default": "./dist/component/convex.config.js"
    },
    "./_generated/component": {
      "types": "./dist/component/_generated/component.d.ts",
      "default": "./dist/component/_generated/component.js"
    },
    "./test": {
      "types": "./dist/test.d.ts",
      "default": "./dist/test.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "npm run build:esm",
    "build:esm": "tsc --project ./tsconfig.build.json",
    "build:codegen": "npx convex codegen --component-dir ./src/component && npm run build:esm",
    "build:clean": "rm -rf dist && npm run build:codegen",
    "dev": "npm-run-all --parallel 'dev:*'",
    "dev:backend": "npx convex dev --typecheck-components",
    "dev:build": "chokidar 'src/**/*.ts' --initial -c 'npm run build:codegen'",
    "typecheck": "tsc --noEmit && cd example && tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run --typecheck",
    "test:watch": "vitest --typecheck"
  },
  "keywords": [
    "convex",
    "component",
    "stagehand",
    "browserbase",
    "browser-automation",
    "ai",
    "web-scraping"
  ],
  "author": "Browserbase",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/browserbase/convex-stagehand"
  },
  "dependencies": {
    "zod-to-json-schema": "^3.23.0"
  },
  "peerDependencies": {
    "convex": "^1.29.3",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.10.0",
    "chokidar-cli": "^3.0.0",
    "convex": "^1.31.0",
    "convex-test": "^0.0.40",
    "eslint": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.0.0",
    "zod": "^3.23.0"
  }
}
